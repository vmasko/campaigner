<% form_for @campaign do |f| %>
	<%= f.label :name %></br>
	<%= f.text_field :name %></br>

	<%= f.label :description %></br>
	<%= f.text_area :description %></br>

	<%= f.label :type %></br>
	<%= f.select :type, Campaign::CAMPAIGN_TYPES, :prompt => "Please, select campaign type" %></br>

	<%= f.label :status %></br>
	<%= f.select :status, Campaign::CAMPAIGN_STATUSES, :prompt => "Please, select campaign status" %></br>

	<%= f.label :active %>
	<%= f.check_box :active %></br>

	<%= render 'planning_fields' %>

	<%= f.submit "Save" %>
<% end %>
