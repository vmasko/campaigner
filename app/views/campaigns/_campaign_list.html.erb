<table id="campaign_list">
	<tr>
		<thead id="campaign_list_header">
		<th>Campaign name</th>
		<th>Status</th>
		<th>Start date</th>
		</thead>
	<% @campaigns.each do |campaign| %>
		<tr>	
			<td>
				<%= link_to "#{mark_inactive(campaign)}", campaign %>
				<%= link_to "Edit", edit_campaign_path(campaign.id), :class => "superscript_link" %>
				<%= link_to "Delete", campaign, :method => :delete, :class => "superscript_link",
															:confirm => "Do you really want to delete â€œ#{campaign.name}â€?"%>
			</td>
				<td class="centered_cols"><%= campaign.status %></td>
				<td class="centered_cols"><%= campaign.planning.start_date if !campaign.planning.nil? %></td>
		</tr>
	<% end %>
</table>
