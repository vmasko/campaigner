<table id="campaign_list">
	<tr>
		<thead id="campaign_list_header">
		<th><%= sortable("name", "Campaign name") %></th>
		<th>Status</th>
		<th>Start date</th>
		</thead>
	<% @campaigns.each do |campaign| %>
		<tr>
			<% if campaign.active? %>	
				<td>
					<%= link_to "#{campaign.name}", campaign %>
					<%= link_to "Edit", edit_campaign_path(campaign.id), :class => "superscript_link" %>
					<%= link_to "Delete", campaign, :class => "superscript_link",
																					:method => :delete,
																					:confirm => "Do you really want to delete â€œ#{campaign.name}â€?" %>
				</td>
				<td><%= campaign.status %></td>
				<td><%= campaign.planning.start_date if !campaign.planning.nil? %>
			<% end %>
		</tr>
	<% end %>
</table>
